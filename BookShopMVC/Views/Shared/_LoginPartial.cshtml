@using System.Security.Claims
@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var userNameClaims = User.Claims.FirstOrDefault(c => c.Type == "unique_name");
    string userName="";
    if(userNameClaims!=null)
    {
        userName = userNameClaims.Value;
    }
}

<ul class="navbar-nav">
    @if (isAuthenticated)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-controller="Account" asp-action="Manage" title="Manage">Hello, @userName!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
